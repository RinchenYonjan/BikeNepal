<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ProfileFragment"
    style="@style/SCREEN">

    <!-- Linear layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Personal Information H1-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Profile"
            android:fontFamily="@font/manrope_bold"
            android:textSize="32sp"
            android:textStyle="bold"
            style="@style/TEXT" />

        <!-- Ellipse image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/displayImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:shapeAppearance="@style/roundedImage"
            android:src="@drawable/profileimage"
            android:scaleType="centerCrop"
            android:layout_margin="15dp" />

        <!-- Heading H2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Our personal information which helps you to get relevant information."
            android:fontFamily="@font/manrope_regular"
            android:textSize="16sp"
            style="@style/TEXT" />

        <!-- Card view -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            android:layout_margin="4dp"
            app:cardElevation="10dp">

            <!-- ScrollView with LinearLayout inside -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#1260cc">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Full Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FULL NAME"
                        android:textSize="20sp"
                        android:fontFamily="@font/manrope_bold"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white" />

                    <!-- Bike Nepal LTD -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike Nepal L.T.D"
                        android:fontFamily="@font/manrope_regular"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="30dp"
                        android:textColor="@android:color/white" />

                    <!-- Released -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Released"
                        android:fontFamily="@font/manrope_bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="30dp" />

                    <!-- Date -->
                    <TextView
                        android:id="@+id/dateofbirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-01-05"
                        android:fontFamily="@font/manrope_regular"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp" />

                    <!-- Service -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SERVICE"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="30dp" />

                    <!-- Online platform -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online Platform"
                        android:fontFamily="@font/manrope_regular"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp" />

                    <!-- Current Activity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CURRENT AVAILABLE"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="30dp" />

                    <!-- Bachelor -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kathmandu, Nepal"
                        android:fontFamily="@font/manrope_regular"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp" />

                    <!-- Module -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MODULE"
                        android:fontFamily="@font/manrope_bold"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="30dp" />

                    <!-- Mobile Development -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Application"
                        android:fontFamily="@font/manrope_regular"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp" />

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
