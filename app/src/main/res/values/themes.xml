<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BikeNepal" parent="Theme.AppCompat.DayNight">

    </style>

    <!-- Light Mode -->
    <!-- Screen background color if light mode on -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Edit Text background color if light mode on -->
    <style name="EDITTEXT">
        <item name="android:background">#FFF</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- Texts color if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <!-- Button background color if light mode on -->
    <style name="BUTTON">
        <item name="android:background">@null</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>
