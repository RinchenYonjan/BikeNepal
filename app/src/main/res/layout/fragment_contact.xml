<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ContactFragment"
    android:gravity="center"
    android:background="#1aaa"
    android:orientation="vertical"
    style="@style/SCREEN" >

    <!-- Heading h1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact_h1"
        android:fontFamily="@font/manrope_extrabold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TEXT" />

        <!-- Heading h2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="@string/anything_to_know_about_bike"
            android:fontFamily="@font/manrope_regular"
            style="@style/TEXT" />

        <!-- Company Name -->
        <EditText
            android:id="@+id/companyname_text"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:hint="@string/bike_company_txt"
            android:textSize="16sp"
            android:textColorHint="#353535"
            android:fontFamily="@font/manrope_regular"
            android:layout_margin="25dp"
            android:background="@drawable/custom_contact_editview"
            style="@style/EDITTEXT" />

        <!-- Country Name -->
        <EditText
            android:id="@+id/countryname_text"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:hint="@string/bike_country_txt"
            android:textSize="16sp"
            android:textColorHint="#353535"
            android:fontFamily="@font/manrope_regular"
            android:layout_margin="10dp"
            android:background="@drawable/custom_contact_editview"
            style="@style/EDITTEXT" />

        <!-- Bike Name -->
        <EditText
            android:id="@+id/bikename_text"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:hint="@string/bike_name_txt"
            android:textSize="16sp"
            android:textColorHint="#353535"
            android:fontFamily="@font/manrope_regular"
            android:layout_margin="25dp"
            android:background="@drawable/custom_contact_editview"
            style="@style/EDITTEXT" />

        <!-- Description -->
        <EditText
            android:id="@+id/description_text"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/custom_describe_textview"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:padding="10dp"
            android:hint="@string/what_you_want_to_ask_txt"
            android:textSize="16sp"
            android:textColorHint="#353535"
            android:fontFamily="@font/manrope_regular"
            style="@style/EDITTEXT" />

        <!-- Send button -->
        <Button
            android:id="@+id/contact_sendBtn"
            android:layout_width="150dp"
            android:layout_height="54dp"
            android:layout_margin="20dp"
            android:background="@drawable/custom_login_btn"
            android:text="@string/send_button_txt"
            android:textSize="16sp"
            android:fontFamily="@font/manrope_semibold"
            android:textColor="@color/white"
            style="@style/BUTTON" />


    </androidx.appcompat.widget.LinearLayoutCompat>





