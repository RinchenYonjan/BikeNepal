<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SettingFragment"
    android:layout_gravity="center"
    style="@style/SCREEN" >

    <!-- Setting -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_h1"
        android:fontFamily="@font/manrope_extrabold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        style="@style/TEXT" />

    <!-- linear layout -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="@style/BACKGROUND" >

        <!-- Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>

        <!-- Notification -->
        <LinearLayout
            android:id="@+id/layoutNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground" >

            <ImageView
                android:id="@+id/imageNotification"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/notification"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/notifications_txt"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TEXT" />

        </LinearLayout>

        <!-- Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>

        <!-- Terms and Conditions -->
        <LinearLayout
            android:id="@+id/layoutTermsConditon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground" >

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/license"
                android:layout_margin="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/terms_and_conditions_txt"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TEXT" />

        </LinearLayout>

        <!-- Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>

        <!-- Dark and Light Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground" >

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/themeToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/night_mode_txt"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TEXT" />

        </LinearLayout>

        <!-- Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>

        <!-- Change Language -->
        <LinearLayout
            android:id="@+id/layoutChangeLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="centerCrop"
                android:background="@null"
                android:src="@drawable/language"
                android:layout_margin="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/change_language_txt"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TEXT" />

        </LinearLayout>

        <!-- Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>

        <!-- Security Measure -->
        <LinearLayout
            android:id="@+id/layoutSecurityMeasure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/security"
                android:layout_margin="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/security_measure_txt"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TEXT" />

        </LinearLayout>

        <!-- Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>

        <!-- Change Password -->
        <LinearLayout
            android:id="@+id/layoutChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground" >

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/password"
                android:layout_margin="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/change_password_txt"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TEXT" />

        </LinearLayout>

        <!-- Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>

        <!-- Logout -->
        <LinearLayout
            android:id="@+id/layoutLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground" >

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/logout"
                android:layout_margin="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/logout_txt"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/TEXT" />

        </LinearLayout>

        <!-- Space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>